{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "extends": "react",
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "indent": ["error", 2],
      "space-before-function-paren": ["error", "never"]
    }
  }
}